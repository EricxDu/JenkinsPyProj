pipeline {
    agent any
    stages {
        stage('Stage 1') {
            steps {
                echo 'Hello, container!'
            }
        }
        stage('Stage 2') {
            steps {
                echo 'Stage 2... how's this?'
            }
        }
        stage('Stage 3') {
            steps {
                echo 'Usually Stage 3 is the Deploy stage.'
            }
        }
    }
}
